<script id="category-detail-template" type="text/x-handlebars-template">
	<div class="category-header">
		{{#if gallery }}
		<img src="{{ gallery.img_name.url }}" alt="" >
		{{/if}}

		<h1>{{ name }}</h1>

		<a href="#" class="share" data-toggle="modal" data-target="#share-modal"><%= t("share")%> <i class="fa fa-share-alt"></i></a>
	</div>
	<div class="content">
		<div class="row">
			<div class="col-lg-12">
				{{{ description }}}
				<h4><%= t("contact") %></h4>
				<div id="lawyers-related">
				</div>
			</div>
		</div>
	</div>
	
	{{#if experiences}}
	<div class="relationship-title">
		<h3><%= t("Experience") %></h3>
	</div>	

	<div class="experiences-related">
		{{#each experiences}}
		<div class="col-md-6 col-sm-6 col-xs-12 experience-item">
			<div class="img-container">
 {{#if gallery.img_name.url }}
  <img src="{{ gallery.img_name.url }}" alt="{{ title }}" >
  {{else}}
   <img src="{{ img_name.url }}" alt="{{ title }}" >
 {{/if}}
</div>

<div class="content">
  <h3><a href="/experiencias/{{ slug }}">{{ title }}</a></h3>
    <p> {{shortenText2 excerpt }}</p>
    <span class="country"><i class="fa fa-globe"></i> {{country}}</span>
    <span class="date"><i class="fa fa-calendar-o"></i> {{getYear date format="YYYY"}}</span>
    <a href="#" class="share" data-toggle="modal" data-target="#share-modal"><i class="fa fa-share-alt"></i> <%= t("share") %></a>
</div>
		</div>
		{{/each}}
		{{/if}}
	</div>

</script>


<script id="categories-list-template" type="text/x-handlebars-template">
	{{#each []}}
		<li><a href="{{slug}}">{{ name }}</a></li>
	{{/each}}
</script>


<script id="category-detail-title" type="text/x-handlebars-template">
	<h1><a href="/areas"><%= t("Practice Areas") %></a></h1>
</script>
