<script id="experience-create-template" type="text/x-handlebars-template">
  <form action="">
    <div class="row">
      <div class="col-lg-8">
        <div class="form-group">
          <input type="text" name="fields[title]" placeholder="Título" value="{{ title }}" class="form-control">
        </div>
        <div class="form-group">
          <textarea class="summernote">{{ content }}</textarea>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="row">
          <div class="form-group col-lg-6">
            <select name="fields[country]" class="form-control" id="">
             {{#if country}}
             <option value="{{country}}">{{country}}</option>
             {{else}}
             <option value="">Seleccionar País</option>
             {{/if}}

             <option value="Global">Global</option>
             <option value="Chile">Chile</option>
             <option value="Colombia">Colombia</option>
             <option value="Perú">Perú</option>
           </select>
         </div>

         <div class="form-group col-lg-6">
          <input type="text" name="fields[date]" placeholder="Fecha" value="{{dateFormat date format="DD/MM/YYYY"}}" class="form-control datepicker">
        </div>

        <div class="form-group col-lg-6">
          <input type="text" name="fields[company_name]" placeholder="Empresa" value="{{ company_name }}" class="form-control">
        </div>
        <div class="form-group col-lg-6">
          <input type="text" name="fields[company_web]" placeholder="(URL completa, incluir http://)" value="{{ company_web }}" class="form-control">
        </div>

        {{#if gallery.img_name }}
        <div class="col-lg-3">
          <img src="{{ gallery.img_name.url}}" alt="" class="img-responsive">
        </div>

        {{/if}}

        <div class="form-group col-lg-6">
          <input type="file" class="form-control" name="fields[img_name]" >
        </div>

        {{#if img_name }}
        <div class="col-lg-3">
          <img src="{{ img_name.url }}" alt="" class="img-responsive">
        </div>
        {{/if}}
        <div class="col-lg-12">
          <div id="categories-checkbox"></div>
        </div>

        <div class="col-lg-12">
          <input type="text" name="query" class="form-control" placeholder="buscar abogado">
        </div>
        <div class="col-lg-12">
          <table id="lawyers-result" class="table"> </table>
        </div>
        <div class="col-lg-12">
          <table id="lawyers-selected" class="table"> <tbody></tbody>
          </table>
        </div>

      </div> <!-- row -->
      </div>

  </div>


  <div class="row">

    <div class="form-group col-lg-3">
      <!-- <a href="#" class="btn btn-info btn-xl open-gallery">Seleccionar logo</a> -->
      <input type="hidden" name="fields[gallery_id]" class="gallery_id" value="{{ gallery_id }}">
    </div>


  </div>

</form>

<div class="row" >
  <div class="col-lg-12">
    {{#if id}}
    <button class="btn btn-store update" style="color:#fff">Guardar</button>
    {{else}}
    <button class="btn btn-store store" style="color:#fff">Guardar</button>
    {{/if}}
  </div>
</div>

</script>
