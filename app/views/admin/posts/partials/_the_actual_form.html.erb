<script id="the-actual-create-template" type="text/x-handlebars-template">
{{#if slug}}
<a href="/posts/{{slug}}" class="btn btn-default btn-info" target="_new">Ver noticia</a>
<br>
<br>
{{/if}}
<form action="">
 <div class="row" >

  <div class="col-lg-8">
    <div class="form-group">
      <input type="text" name="fields[title]" placeholder="TÃ­tulo" value="{{ title }}" class="form-control">
    </div>

    <div class="form-group">
      <textarea class="summernote">{{ content }}</textarea>
    </div>

  </div>

  <div class="col-lg-4">
    
      <div class="row">
   <div class="form-group col-lg-12">
      <input type="text" name="fields[author]" placeholder="Autor" value="{{ author }}" class="form-control">
    </div>
       <div class="form-group col-lg-6">
        <select name="fields[lang]" class="form-control" id="">
         {{#if lang}}
         <option value="{{lang}}">{{lang}}</option>
         {{else}}
         <option value="">Seleccionar Lenguaje</option>
         {{/if}}

         <option value="en">en</option>
         <option value="es">es</option>
       </select>
     </div>
     <div class="form-group col-lg-6">
      <input type="text" name="fields[date]" placeholder="Fecha" value="{{dateFormat date format="DD/MM/YYYY"}}" class="form-control datepicker">
    </div>
   </div>

   <div class="row">
    
    <div class="form-group col-lg-12">
      <input type="file" class="form-control" name="fields[img_name]" >
    </div>

  </div>

  <div class="row">
   <div class="form-group col-lg-6">
    <a href="#" class="btn btn-info  open-gallery">Seleccionar imagen</a>
    <input type="hidden" name="fields[gallery_id]" class="gallery_id" value="{{ gallery_id }}">
  </div>
  <div class="form-group col-lg-1">
   {{#if gallery.img_name }}
   <img src="{{ gallery.img_name.url}}" alt="" width="70px"> 
   {{/if}}
 </div>


<div class="form-group col-lg-1">
 {{#if img_name }}
 <img src="{{ img_name.url }}" alt="" width="70px"> 
 {{/if}}
</div>


<div class="row">
  <div class="col-lg-12">
    <div id="categories-checkbox"> </div>
  </div>
</div>


<div class="row" >
  <div class="col-lg-12">
    <input type="text" name="query" class="form-control" placeholder="buscar abogado">
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <table id="lawyers-result" class="table"> </table> 
  </div>

  <div class="col-lg-6">
    <table id="lawyers-selected" class="table"> 
      <tbody></tbody>
    </table>
  </div>
</div>
</form>

</div>

<div class="row">
  <div class="col-lg-12">
    {{#if id}}
    <button class="btn btn-store update">Actualizar</button>
    {{else}}
    <button class="btn btn-store store">Guardar</button>
    {{/if}}
  </div>
</div>

</script>




