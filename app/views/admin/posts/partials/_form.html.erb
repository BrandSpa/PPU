<script id="post-create-template" type="text/x-handlebars-template">
  <form action="">
    <div class="row">

    <div class="form-group col-lg-6">
      <select name="post[country]" class="form-control" id="">
       {{#if country}}
        <option value="{{country}}">{{country}}</option>
        {{else}}
         <option value="">Seleccionar País</option>
       {{/if}}

        <option value="Global">Global</option>
        <option value="Chile">Chile</option>
        <option value="Colombia">Colombia</option>
      </select>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-lg-6">
        <input type="text" name="post[date]" placeholder="Fecha" value="{{dateFormat date format="MM/DD/YYYY"}}" class="form-control datepicker">
    </div>
    <div class="form-group col-lg-6">
        <input type="text" name="post[author]" placeholder="Autor" value="{{ author }}" class="form-control">
    </div>
  </div>

   <div class="row">
    <div class="form-group col-lg-12">
        <input type="text" name="post[title]" placeholder="Título" value="{{ title }}" class="form-control">
    </div>
    <div class="col-lg-12 form-group">
      <textarea class="summernote">{{ content }}</textarea>
    </div>
  </div>

  <div class="row">
 
    <div class="form-group col-lg-3">
      <a href="#" class="btn btn-info btn-xl open-gallery">Seleccionar imagen</a>
      <input type="hidden" name="post[gallery_id]" class="gallery_id" value="{{ gallery_id }}">
    </div>

    {{#if gallery.img_name }}
    <div class="col-lg-3">
      <img src="{{ gallery.img_name.url}}" alt="" class="img-responsive"> 
    </div>
    {{/if}}

    <div class="form-group col-lg-6">
      <input type="file" class="form-control" name="post[img_name]" >
    </div>
  {{#if img_name }}
    <div class="col-lg-3">
      <img src="{{ img_name.url }}" alt="" class="img-responsive"> 
    </div>
    {{/if}}

  </div>
      <div class="row">
      <div id="categories-checkboxes">
        
      </div>
    </div>


  <div class="row" >
  <div class="col-lg-12">

        <input type="text" name="query" class="form-control" placeholder="buscar abogado">

  </div>
    <div class="col-lg-6">
      
      <p></p>
      <table id="lawyers-result" class="table"> </table> 
    </div>
    <div class="col-lg-6">
    <table id="lawyers-selected" class="table"> 
    <tbody></tbody>
    </table>
    </div>
  </div>
   </form>
   <div class="row" >
  <div class="col-lg-12">
  {{#if id}}
    <button class="btn btn-store update">Guardar</button>
  {{else}}
      <button class="btn btn-store store">Guardar</button>
  {{/if}}
    </div>
  </div>

</script>

