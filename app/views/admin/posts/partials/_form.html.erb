<script id="post-create-template" type="text/x-handlebars-template">
{{#if slug}}
<a href="/posts/{{slug}}" class="btn btn-default btn-info" target="_new">Ver noticia</a>
<br>
<br>
{{/if}}
<form action="">
 <div class="row" >

  <div class="col-lg-8">
    <div class="form-group">
      <input type="text" name="fields[title]" placeholder="Título" value="{{ title }}" class="form-control">
    </div>

    <div class="form-group">
      <textarea class="summernote">{{ content }}</textarea>
    </div>

  </div>

  <div class="col-lg-4">

      <div class="row">
   <div class="form-group col-lg-12">
      <input type="text" name="fields[author]" placeholder="Autor" value="{{ author }}" class="form-control">
    </div>
        <div class="form-group col-lg-6">
          <select name="fields[country]" class="form-control" id="">
           {{#if country}}
           <option value="{{country}}">{{country}}</option>
           {{else}}
           <option value="">Seleccionar País</option>
           {{/if}}

           <option value="Global">Global</option>
           <option value="Chile">Chile</option>
           <option value="Colombia">Colombia</option>
           <option value="Perú">Perú</option>
         </select>
       </div>

       <div class="form-group col-lg-6">
        <select name="fields[lang]" class="form-control" id="">
         {{#if lang}}
         <option value="{{lang}}">{{lang}}</option>
         {{else}}
         <option value="">Seleccionar Lenguaje</option>
         {{/if}}

         <option value="en">en</option>
         <option value="es">es</option>
       </select>
     </div>

   </div>

   <div class="row">
    <div class="form-group col-lg-6">
      <input type="text" name="fields[date]" placeholder="Fecha" value="{{dateFormat date format="DD/MM/YYYY"}}" class="form-control datepicker">
    </div>
    <div class="form-group col-lg-6">
      <input type="file" class="form-control img_name" name="fields[img_name]" >
    </div>
  </div>

  <div class="row">
   <div class="form-group col-lg-12">
    <a href="#" class="btn btn-info  open-gallery">Seleccionar imagen</a>
    <input type="hidden" name="fields[gallery_id]" class="gallery_id" value="{{ gallery_id }}">
  </div>

  <div class="form-group col-lg-6 gallery-img">
   {{#if gallery.img_name }}
   <a href="#" class="remove-gallery">Quitar</a>
   <img src="{{ gallery.img_name.url}}" alt="" width="100%">
   {{/if}}
 </div>


<div class="form-group col-lg-6 img-name">
 {{#if img_name.url }}
 <a href="#" class="remove-img">Quitar</a>
 <img src="{{ img_name.url }}" alt="" width="100%">
 {{/if}}
</div>


<div class="row">
  <div class="col-lg-12">
    <div id="categories-checkbox"> </div>
  </div>
</div>


<div class="row" >
  <div class="col-lg-12">
    <input type="text" name="query" class="form-control" placeholder="buscar abogado">
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table id="lawyers-result" class="table"> </table>
  </div>

  <div class="col-lg-12">
    <table id="lawyers-selected" class="table">
      <tbody></tbody>
    </table>
  </div>
</div>
</form>

</div>

<div class="row">
  <div class="col-lg-12">
    {{#if id}}
    <button class="btn btn-store update">Actualizar</button>
    {{else}}
    <button class="btn btn-store store">Guardar</button>
    {{/if}}
  </div>
</div>

</script>
