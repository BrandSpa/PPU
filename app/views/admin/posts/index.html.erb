<div class="panel panel-default col-lg-9">
  <div class="panel-body">
    <form action="">
      <div class="row">
      <div class="form-group col-lg-3">
       <select name="post[lang]" class="form-control lawyer-lang">
       {{#if lang}}
        <option value="{{lang}}">{{lang}}</option>
        {{else}}
         <option value="">Seleccionar Idioma</option>
       {{/if}}
        <option value="es">Es</option>
        <option value="en">En</option>
      </select>
    </div>

    <div class="form-group col-lg-6">
      <select name="post[country]" class="form-control" id="">
       {{#if country}}
        <option value="{{country}}">{{country}}</option>
        {{else}}
         <option value="">Seleccionar País</option>
       {{/if}}
        
        <option value="Chile">Chile</option>
        <option value="Colombia">Colombia</option>
        <option value="Chile">España</option>
      </select>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-lg-6">
        <input type="text" name="post[date]" placeholder="Fecha" value="{{ date }}" class="form-control">
    </div>
    <div class="form-group col-lg-6">
        <input type="text" name="post[author]" placeholder="Fecha" value="{{ author }}" class="form-control">
    </div>
  </div>

   <div class="row">
    <div class="form-group col-lg-12">
        <input type="text" name="post[title]" placeholder="Fecha" value="{{ title }}" class="form-control">
    </div>
    <div class="form-group col-lg-12">
      <textarea name="post[content]" id="" col="10" class="form-control">{{ content }}</textarea>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-lg-6">
      <a href="#" class="btn btn-info">Seleccionar imagen</a>
    </div>

    <div class="form-group col-lg-6">
      <input type="file" class="form-control" name="img_name">
    </div>
  </div>

  <div class="row">
  <div class="col-lg-12">
    <div class="btn btn-info">Agregar Abogado</div>
    <hr>
    <ul>
      <li>Alejandro Sanabria</li>
      <li>Alejandro Sanabria</li>
      <li>Alejandro Sanabria</li>
      <li>Alejandro Sanabria</li>
    </ul>
  </div>
    
  </div>
    <div class="row">
      <div id="categories-checkboxes">
        
      </div>
    </div>
    </form>
    <a href="#" class="btn btn-store">Guardar</a>
  </div>
</div>
