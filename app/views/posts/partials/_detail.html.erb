<script id="post-detail-template" type="text/x-handlebars-template">
<div class="post-header">
{{#if gallery}}
  <img src="{{ gallery.img_name.url }}" alt="{{ title }}" class="hidden-xs">
  {{else}}
   <img src="{{ img_name.url }}" alt="{{ title }}" class="hidden-xs">
 {{/if}}

	<h1>{{ title }}</h1>
  <h5>{{ author }}</h5>
  
	<div class="categories">
		{{#each categories }}
		<span>{{ name }}</span>
		{{/each}}
	</div>
	
        <a class="share" href="https://twitter.com/intent/tweet?text={{ title }}&url=http://ppulegal.com/posts/{{ slug }}"><i class="fa fa-twitter-square"></i></a>

        <a class="share" href="http://www.linkedin.com/shareArticle?mini=true&url=http://ppulegal.com/posts/{{ slug }}" onclick="javascript:window.open(this.href,
          '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;" ><i class="fa fa-linkedin-square"></i></a>

    <a class="share" href="https://plus.google.com/share?url=http://ppulegal.com/posts/{{ slug }}" onclick="javascript:window.open(this.href,
  '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;">
    <i class="fa fa-google-plus-square"></i>
  </a>

<a class="share" href="#" onclick="javascript:openShare('http://ppulegal.com/posts/{{ slug }}')"><i class="fa fa-facebook-square"></i></a>
</div>
<div class="content">
  <i class="fa fa-globe"></i> {{ country }} - <i class="fa fa-calendar-o"></i> {{dateFormat date format="DD - MM -YYYY"}}
<br>
{{{ content }}}

</div>
</script>


<script id="post-detail-title" type="text/x-handlebars-template">
	<h1><a href="/"><%= t("News") %></a></h1>
</script>
