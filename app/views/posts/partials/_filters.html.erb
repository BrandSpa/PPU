<script id="posts-filter" type="text/x-handlebars-template">  
  <h1><%= t("News") %></h1>
  
  <form class="form-group search">
    <input type="text" class="form-control query" placeholder="<%= t("Search") %>">
  </form>

    <div class="col-md-3 col-sm-3 countries">
    <div class="checkbox-inline">
      <label>
        <input type="checkbox" class="country" value="Colombia" checked="checked">
        Colombia
      </label>
    </div>

    <div class="checkbox-inline">
      <label>
        <input type="checkbox" class="country" value="Chile" checked="checked">
        Chile
      </label>
    </div>
  </div>

  <div class="col-md-2 col-sm-2 category">
    <select class="form-control ">
      <option value=""><%= t("Areas") %></option>
      <%= render "partials/categories_option" %>
    </select>
  </div>

  <a href="#" class="open-filters" data-toggle="modal" data-target="#filters-modal"><i class="fa fa-bars"></i> Filtrar</a>
</script>