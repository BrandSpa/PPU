<script type="text/x-handlebars-template" id="lawyer-form-template">
  <form action=""  class="col-lg-6" enctype="multipart/form-data">   
    <div class="row">
    <div class="form-group col-lg-12">
      <select name="fields[country]" class="form-control" id="">
       {{#if country}}
        <option value="{{country}}">{{country}}</option>
        {{else}}
         <option value="">Seleccionar País</option>
       {{/if}}
        <option value="Chile">Chile</option>
        <option value="Colombia">Colombia</option>
        <option value="Chile">España</option>
      </select>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-lg-12">
      <label for="file">Adjuntar Foto de perfil</label>
      <input type="file" name="fields[img_name]" class='form-control'>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-lg-12">
    <label>Nombre</label>
      <input type="text" name="fields[name]" class="form-control"  value="{{ name }}">
    </div>

    <div class="form-group col-lg-12">
      <label>Apellidos</label>
      <input type="text" name="fields[lastname]" class="form-control" value="{{ lastname }}">
    </div>

    <div class="form-group col-lg-12">
    <label>Email</label>
    <span>nombre.apellido@ppulegal.com / Nombre compuesto: nombrenombre.apellido@ppulegal.com</span>
      <input type="text" name="fields[email]" class="form-control" placeholder="ej: marcela.salazar@ppulegal.com / joseluis.lara@ppulegal.com" value="{{ email }}">
    </div>

    <div class="form-group col-lg-12">
    <label for="">Teléfono</label>
      <span>
      Incluir indicativo +571 para Bogotá,  +575 para Barranquilla y +562 para Santiago, seguido por su número directo. </span>
      <input type="text" name="fields[phone]" class="form-control" placeholder="ej: +571 3268606" value="{{ phone }}">
    </div>

    <div class="form-group col-lg-12">
      <select name="fields[position]" class="form-control change-position">
       {{#if position}}
        <option value="{{position}}">{{position}}</option>
        {{else}}
         <option value="">Seleccionar cargo</option>
       {{/if}}
        <option value="<%= t('lawyer')%>"><%= t('lawyer')%></option>
        <option value="<%= t('partner')%>"><%= t('partner')%></option>
        <option value="<%= t('specialist')%>"><%= t('specialist')%></option>
        <option value="<%= t('senior_counsel')%>"><%= t('senior_counsel')%></option>
      </select>
    </div>

    <div class="form-group col-lg-12">
      <select name="fields[level]" class="form-control change-level" id="">
      {{#if level}}
        <option value="{{level}}">{{level}}</option>
        {{else}}
         <option value="">Seleccionar nivel</option>
       {{/if}}
        
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option>
        <option value="9">9</option>
        <option value="10">10</option>
        <option value="11">11</option>
        <option value="12">12</option>
      </select>
    </div>

    <div class="form-group col-lg-12 lawyer-description {{#unless description}} hidden {{/unless}}">
      <textarea name="fields[description]" class="form-control" rows="3" placeholder="Descripción">{{ description }}</textarea>
    </div>

   <div class="col-lg-12">
     <h4><%= t('practice_areas') %></h4>
     <div class="form-group">  
     <span>
      seleccione las casillas de las áreas a las cuales está Vinculado. Evite poner más de 3 prácticas. </span>
      </div>
   </div>
    <div class="form-group col-lg-12" id="categories-checkbox"> </div>
  </div>
</form>
 
</script>

<script type="text/x-handlebars-template" id="lawyer-categories-template">

{{#each []}} 
  <div class="checkbox">
    <label>
      <input type="checkbox" name="fields[category_ids][]" value="{{ id }}"> {{ name }}
    </label>
  </div>
{{/each}}


</script>