 <script id="lawyer-template" type="text/x-handlebars-template"> 
  <div class="lawyer-header">
    <div class="content-left">
      <p>{{ position }}</p>
      <h1>{{toUpperCase name }} {{toUpperCase lastname }}</h1>
      <a href="tel:{{ phone }}" class="lawyer-phone">{{ phone }}</a>
      <a href="mailto:{{ email }}" class="lawyer-email">{{ email }}</a>
    </div>

    <div class="content-right">
      {{#if translation.img_name.url}}
        <img src="{{ translation.img_name.url }}" alt="{{ name }} {{ lastname }}">
      {{else}}

        {{#if img_name.url}}
          <img src="{{ img_name.url }}" alt="{{ name }} {{ lastname }}">
        {{else}}
          <img src="/img/lawyer_placeholder.jpg" alt="{{ name }} {{ lastname }}">
        {{/if}}

      {{/if}}
      <div class="share-container">
        <a href="#" class="share"> <%= t("share") %> <i class="fa fa-share-alt"></i></a>
        <a href="/abogados/{{ id }}/vcard" class="btn btn-primary btn-vcard" target="_new"><%= t('Download')%> </br>VCard</a>
      </div>
      
    </div>
  </div>

  <p class="lawyer-description">{{ description }}</p>
  <div class="row">
    <div class="col-lg-6 lawyer-left">
    
      <h3><i class="fa fa-briefcase"></i> <%= t('general_information') %></h3>
      {{#if categories}}
      <h4><%= t('practice_areas') %></h4>
      <ul>
        {{#each categories}}
        <li>{{ name }}</li>
        {{/each}}
      </ul>
      {{/if}}
      {{#if educations}}
      <h4><%= t('education') %></h4>
      <ul>
        {{#each educations}}
        <li>{{ title }}{{#if title}},{{/if}} {{ institution }} {{ year }}</li>
        {{/each}}
      </ul>
      {{/if}}

      {{#if jobs}}
      <h4><%= t('professional_experience') %></h4>
      <ul>
        {{#each jobs}}
        <li>{{ title }}{{#if title}},{{/if}} {{ company }} {{ from }} {{ until }}</li>
        {{/each}}
      </ul>
      {{/if}}

      {{#if recognitions}}
      <h4><%= t('Conferences') %></h4>
      <ul>
        {{#each recognitions}}
        <li>{{ title }}{{#if title}},{{/if}} {{ country }} {{ year }}</li>
        {{/each}}
      </ul>
      {{/if}}

      {{#if institutions}}
      <h4><%= t('memberships') %></h4>
      <ul>
        {{#each institutions}}
        <li>{{ title }}{{#if title}},{{/if}} {{ country }} {{ from }} {{ until }}</li>
        {{/each}}
      </ul>
      {{/if}}

      {{#if languages}}
      <h4><%= t('languages') %></h4>
      <ul>
        {{#each languages}}
        <li>{{ name }}</li>
        {{/each}}
      </ul>
      {{/if}}

      {{#if phrases}}
      <div class="separator">
        <hr>
      </div>
      {{#each phrases}}
      <div class="phrase">
        <p>{{ content }}</p>
        <h5>{{ author }}</h5>
      </div>
      {{/each}}

      {{/if}}


    </div>
    <div class="col-lg-6 lawyer-right">
      {{#if awards}}
      <h3><i class="fa fa-bookmark-o"></i> <%= t('award') %></h3>
      {{#each awards}}
      
      <div class="award">
        {{#if img_name.url}}
        <div class="img-container">
          <img src="{{ img_name.url }}" alt="{{ title }}" class="img-responsive">
        </div>
        {{/if}}
        <h5>{{ title }}</h5>
      </div>

      {{/each}}
      {{/if}}

      {{#if articles}}
      <h3><i class="fa fa-file-text-o"></i> <%= t('Articles') %></h3>
      {{#each articles}}
        <div class="article-container">
        {{#if file_name.url}}
          <a href="{{ file_name.url }}" target="_new">{{ title }}</a>
          {{else}}
          {{#if link}}
          <a href="{{ link }}" target="_new">{{ title }}</a>
          {{else}}
            {{ title }}
          {{/if}}

        {{/if}}  
        {{/each}}
        {{/if}}
      </div>

    </div>


  </script>


</div>

<script id="lawyer-detail-title" type="text/x-handlebars-template">
  <h1><a href="/abogados"><%= t("Lawyers") %></a></h1>
</script>

